<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/from_to_where"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="77dp"
        android:layout_height="56dp"
        android:foreground="@drawable/app_logo_black"
        android:src="@drawable/app_logo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="299dp"
        android:layout_height="59dp">

        <TextView
            android:id="@+id/Fw"
            android:layout_width="267dp"
            android:layout_height="16dp"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:text="from to where"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/Day_Drive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Day_Drive"
            android:layout_width="105dp"
            android:layout_height="16dp"
            android:layout_margin="5dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="49dp"
            android:text="Time"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Time_Start"
            app:layout_constraintTop_toBottomOf="@+id/Fw" />

        <TextView
            android:id="@+id/Time_Start"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="38dp"
            android:text="DayTime"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/Day_Drive"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Fw" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>